<Application x:Class="GUI_Task_Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GUI_Task_Demo"
             StartupUri="NewRestaurantFinder.xaml">
    <Application.Resources>
        <Style x:Key="Modern">
            <Setter Property="Control.Background" Value="#dfe3e6"/>
            <Setter Property="Control.BorderThickness" Value="0"/>
            <Setter Property="Control.Margin" Value="1"/>
        </Style>

        <Style x:Key="Main">
            <Setter Property="Control.Background" Value="#f5f7fa"/>
        </Style>

        <Style x:Key="FilterMenu">
            <Setter Property="Control.Background" Value="#f5f7fa"/>
        </Style>
    </Application.Resources>
</Application>
